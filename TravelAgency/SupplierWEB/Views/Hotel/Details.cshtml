@model Dictionary<int, (string, int, int)>
@{
    ViewData["Title"] = "Отель";
}

@section Links {
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Request" asp-action="Request">Заявки </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Hotel" asp-action="ListHotels">Отели </a>
            </li>
        </ul>
    </div>
}
<div class="text-left">
    <h4>Отель №@ViewBag.HotelId</h4>
</div>

<hr />
<div>
    <a class="text-dark" asp-action="ListHotels">Вернуться назад</a>
</div>
<hr />

<p><a class="btn btn-primary" asp-controller="Guide" asp-action="ListGuides" asp-route-fridgeId="@ViewBag.HotelId">Пополнить отель</a></p>

<table class="table table-hover table-bordered">
    <thead class="thead thead-dark">
        <tr>
            <th>
                Гид
            </th>
            <th>
                Свободно
            </th>
            <th>
                Зарезервировано
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Item1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Item2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Item3)
                </td>
            </tr>
        }
    </tbody>
</table>

